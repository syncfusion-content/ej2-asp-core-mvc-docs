        <e-majorticklines width="0"></e-majorticklines>
    </e-chart-primaryyaxis>
    <e-series-collection>
        <e-series xName="x" yName="y" type="@Syncfusion.EJ2.Charts.ChartSeriesType.Line" width="2">
