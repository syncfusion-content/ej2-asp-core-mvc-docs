@model List<string>
@{
    char nameMentionChar = '@';
    var data = new Countries().GetData();
}
<div id="mentionElement" placeholder="Type @Html.Raw("mention") and tag country"></div>

@Html.EJS().Mention("Allow-Space").Target("#mentionElement").MentionChar(nameMentionChar).Fields(new Syncfusion.EJ2.DropDowns.MentionFieldSettings { Text = "Country" }).DataSource((IEnumerable<object>)data).AllowSpaces(true).Highlight(true).Render()

<style>

    div#mentionElement[placeholder]:empty:before {
        content: attr(placeholder);
    }

    #mentionElement{
        min-height: 100px; 
        border: 1px solid #D7D7D7;
        border-radius: 4px; 
        padding: 8px; 
        font-size: 14px; 
        width: 600px;
    }

</style>