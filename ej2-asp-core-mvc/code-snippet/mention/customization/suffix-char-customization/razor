@model List<string>
@{
    char nameMentionChar = '@';
    var data = new SportsData().SportsList();
}
<div id="mentionElement" placeholder="Type @Html.Raw("mention") and tag sports"></div>

@Html.EJS().Mention("Suffix").Target("#mentionElement").MentionChar(nameMentionChar).DataSource((IEnumerable<object>)data).Fields(new Syncfusion.EJ2.DropDowns.MentionFieldSettings { Text = "Game" , Value = "ID" }).SuffixText("&nbsp;").Render()

<style>

    div#mentionElement[placeholder]:empty:before {
        content: attr(placeholder);
    }

    #mentionElement{
        min-height: 100px; 
        border: 1px solid #D7D7D7;
        border-radius: 4px; 
        padding: 8px; 
        font-size: 14px; 
        width: 600px;
    }
    
</style>