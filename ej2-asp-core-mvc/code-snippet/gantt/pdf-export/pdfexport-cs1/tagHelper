<ejs-gantt id='GanttContainer' dataSource="GanttDataSourceCollection" toolbar="@(new List<string>() { "PdfExport" })"
           toolbarClick="toolbarClick" allowPdfExport="true" pdfQueryTaskbarInfo="pdfQueryTaskbarInfo">
    <e-gantt-taskfields id="TaskId" name="TaskName" startDate="StartDate" duration="Duration" progress="Progress" child="SubTasks">
    </e-gantt-taskfields>
</ejs-gantt>
<script>
    function toolbarClick(args) {
        var gantt = document.getElementById("GanttContainer").ej2_instances[0];
        if (args.item.id === 'GanttContainer_pdfexport') {
            gantt.pdfExport();
        }
    }
    function pdfQueryTaskbarInfo(args) {
        args.taskbar.progressColor = new ej.pdfexport.PdfColor(255, 85, 85);
    }
</script>