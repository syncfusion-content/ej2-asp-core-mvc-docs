<div class="switch-container">
    <label for="switch" class="switch">Show/Hide Taskbar</label>
    <ejs-switch id="switch" checked="false" change="onChange"></ejs-switch>
</div>

<ejs-gantt id='Gantt' dataSource="GanttDataSourceCollection" height="450px" queryTaskbarInfo="queryTaskbarInfo" queryCellInfo="queryCellInfo">
    <e-gantt-taskfields id="TaskId" name="TaskName" startDate="StartDate" endDate="EndDate" duration="Duration" progress="Progress" dependency="Predecessor" child="SubTasks">
    </e-gantt-taskfields>
</ejs-gantt>

<script type="text/javascript">
    var switchChecked = false;
    function onChange(args) {
        switchChecked = args.checked;
        var ganttObj = document.getElementById("Gantt").ej2_instances[0];
        ganttObj.refresh();
    }
    function queryTaskbarInfo(args) {
        if (switchChecked && args.data.ganttProperties.taskId == 1) {
            for (var i = 0; i < args.rowElement.children[0].children.length; i++) {
                args.rowElement.children[0].children[i].style.display = 'none';
            }
        }
    }
    function queryCellInfo(args) {
        if (switchChecked && args.data.ganttProperties.taskId == 1) {
            args.cell.innerText = '';
        }
    }
</script>

<style>
    .switch-container {
        display: flex;
        align-items: center;
        padding: 10px 0px 10px 0px;
    }

    .switch {
        margin-left: 10px;
    }
</style>