<script>
 function queryCellEvent(args)
        {
            var data = args.data;
            switch (data.EmployeeID) {
                case 10001:
                    if (args.column.field === '1:00') {
                        args.rowSpan = 10;
                    }
                    break;
            }
        }
</script>   