@page
@using EJ2CoreSampleBrowser.Models
@using Syncfusion.EJ2

@section ControlsSection{
    <div class="col-lg-12 control-section">
        <div class="content-wrapper ador-textbox">
            <div class="row">
                <ejs-textbox id="prpend" cssClass="e-prepend-textbox" placeholder="Enter your Name" floatLabelType="Auto" 
                    prependTemplate="@Html.Raw("<span class='e-icons e-user'></span><span class='e-input-separator'></span>")">
                </ejs-textbox>
            </div>
            <div class="row">
                <ejs-textbox id="append" cssClass="e-eye-icon" placeholder="Password" floatLabelType="Auto" created="onAppendCreated" 
                    appendTemplate="@Html.Raw("<span class='e-input-separator'></span><span id='text-icon' class='e-icons e-eye'></span>")">
                </ejs-textbox>
            </div>
            <div class="row">
                <ejs-textbox id="iconTextbox" cssClass="e-icon-textbox" placeholder="Enter the Mail Address" floatLabelType="Auto" created="onIconTemplateCreated"
                    prependTemplate="@Html.Raw("<span class='e-icons e-people'></span><span class='e-input-separator'></span>")" 
                    appendTemplate="@Html.Raw("<span>.com</span><span class='e-input-separator'></span><span id='delete-text' class='e-icons e-trash'></span>")">
                </ejs-textbox>
            </div>
        </div>
    </div>
}



@section PreScripts {
    <script>
        function onPrependCreated() {
            var prefixLabel = new ej.dropdowns.DropDownList({width: '65px'});
            prefixLabel.appendTo('#select');
        }
        function onAppendCreated() {
            var textIcon = document.querySelector('#text-icon');
            if (textIcon) {
                textIcon.addEventListener('click', function() {
                    var appendTextbox = document.getElementById("append").ej2_instances[0];
                    if (appendTextbox.type === 'text') {
                        appendTextbox.type = 'Password';
                        textIcon.className = 'e-icons e-eye-slash';
                    } else {
                        appendTextbox.type = 'text';
                        textIcon.className = 'e-icons e-eye';
                    }
                    appendTextbox.dataBind();
                });
            }
        }
        function onIconTemplateCreated() {
            var deleteIcon = document.querySelector('#delete-text');
            if (deleteIcon) {
                deleteIcon.addEventListener('click', function() {
                    var iconTextbox = document.getElementById("iconTextbox").ej2_instances[0];
                    iconTextbox.value = '';
                    iconTextbox.dataBind();
                });
            }
        }
    </script>
}