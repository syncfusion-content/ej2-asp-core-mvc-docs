    <div class="sample-container">
        <!--  Initialize File Manager control with ASP.NET Core service-->
        <!--Replace the hosted port number in the place of "{port}"-->
        <ejs-filemanager id="filemanager">
                     getImageUrl="http://localhost:{port}/api/SharePointProvider/SharePointGetImage"
                    url="http://localhost:{port}/api/SharePointProvider/SharePointFileOperations"
                    downloadUrl="http://localhost:{port}/SharePointProvider/SharePointDownload"
                    uploadUrl="http://localhost:{port}/SharePointProvider/SharePointUpload">
            </e-filemanager-ajaxsettings>
        </ejs-filemanager>
    </div>
