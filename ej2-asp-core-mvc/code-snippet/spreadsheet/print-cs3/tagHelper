            </e-spreadsheet-columns>
        </e-spreadsheet-sheet>
    </e-spreadsheet-sheets>
</ejs-spreadsheet>



<script>

  function dataBound() {
    this.cellFormat({ fontWeight: 'bold', textAlign: 'center' }, 'A1:D1');
    this.cellFormat({ fontWeight: 'bold'}, 'A11:D11');
}

</script>