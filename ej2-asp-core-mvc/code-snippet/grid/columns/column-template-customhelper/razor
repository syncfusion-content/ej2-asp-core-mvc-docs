        col.Field("OrderDate").HeaderText("Order Date").TextAlign(Syncfusion.EJ2.Grids.TextAlign.Right).Width(120).Format("yMd").Add();
    }).Height("315").Render();
    
<script type="text/x-template" id="template">
    ${ formatCurrency(data.Freight) }
</script>
