@Html.EJS().RichTextEditor("edit-color").ToolbarSettings(e => e.Items(new object[] { 
    "FontColor", "BackgroundColor", "Bold", "Italic", "Underline", "Formats", "Alignments",
    "Blockquote", "OrderedList", "UnorderedList", "CreateLink",
    "Image", "SourceCode", "Undo", "Redo"
})).FontColor(f => f.ShowRecentColors(true)).BackgroundColor(b => b.ShowRecentColors(true)).Value(@ViewBag.value).Render()