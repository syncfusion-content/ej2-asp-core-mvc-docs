        justify-content: center;
    }

    .e-carousel .e-carousel-items.zoom .e-carousel-item,
    .e-carousel .e-carousel-items.bounce .e-carousel-item,
    .e-carousel .e-carousel-items.flip .e-carousel-item {
        animation-duration: 0.6s;
    }

        .e-carousel .e-carousel-items.flip .e-carousel-item.e-previous-slide,
        .e-carousel .e-carousel-items.flip .e-carousel-item.e-next-slide {
            animation-name: flip;
            opacity: 1;
        }

        .e-carousel .e-carousel-items.zoom .e-carousel-item.e-next-slide {
            animation-name: zoomInRight;
        }

        .e-carousel .e-carousel-items.zoom .e-carousel-item.e-previous-slide {
            animation-name: zoomInLeft;
        }

        .e-carousel .e-carousel-items.zoom .e-carousel-item.e-carousel-right {
            animation-name: zoomOutRight;
        }

        .e-carousel .e-carousel-items.zoom .e-carousel-item.e-carousel-left {
            animation-name: zoomOutLeft;
        }

        .e-carousel .e-carousel-items.bounce .e-carousel-item.e-next-slide {
            animation-name: bounceInRight;
        }

        .e-carousel .e-carousel-items.bounce .e-carousel-item.e-previous-slide {
            animation-name: bounceInLeft;
        }

        .e-carousel .e-carousel-items.bounce .e-carousel-item.e-carousel-left {
            animation-name: bounceOutLeft;
        }

        .e-carousel .e-carousel-items.bounce .e-carousel-item.e-carousel-right {
            animation-name: bounceOutRight;
        }
