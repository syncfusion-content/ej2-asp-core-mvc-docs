            </e-carousel-items>
        </ejs-carousel>
    </div>
</div>

<script type="text/javascript">
    function onSlideChanging(args) {
        args.currentSlide; // We can able to customize the slide before changing.
    }
    function onSlideChanged(args) {
        args.currentSlide; // We can able to customize the slide after changed.
    }
</script>
